<h1>Agosto</h1>
<%= link_to 'previous', registers_path(start: 1.month.ago, format: :json), remote: true %>
<table>
  <thead>
    <th>Fecha</th>
    <th>Concepto</th>
    <th>Folio</th>
    <th>Cantidad</th>
  </thead>
<% @registers.each do |register| %>
  <tr>
    <td><%= l register.date %></td>
    <td><%= link_to register.name, register %></td>
    <td><%= register.folio %></td>
    <td><%= amount_for register %></td>
  </tr>
<% end %>
</table>